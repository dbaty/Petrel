<metal:layout metal:use-macro="api.layout">
<metal:content metal:fill-slot="content">

<h1>Rename items&hellip;</h1>

<form action="rename" method="POST">
  <div class="formRow"
       tal:repeat="item items">
    <label class="required">
      Id for "<em tal:content="item['title']"/>"
      <img tal:attributes="src api.static_url('static/img/required.png')"
           width="4" height="4" alt="(required)"/>
    </label>
    <input type="hidden" name="name_orig" tal:attributes="value item['id']"/>
    <input type="text" name="name_new" tal:attributes="value item['id']"/>
  </div>

  <div class="buttons">
    <button type="submit" class="positive">
      <img tal:attributes="src api.static_url('static/img/tick.png')" alt=""/>
      Rename
    </button>
    <a tal:attributes="href context_url">Cancel</a>
  </div>
</form>

</metal:content>
</metal:layout>
